{
  "$schema": "node_modules/albatros/schema.json",
  "name": "ru.topomatic.intercept",
  "displayName": "Тестовое приложение Topomatic 360",
  "description": "Тестовое приложение демонстрирует возможность создания пользовательских плагинов, позволяющих расширять базовую функциональность Topomatic 360 за счёт новых функций",
  "private": true,
  "version": "0.0.1",
  "main": "src/main.ts",
  "author": {
    "name": "ООО НПФ \"Топоматик\"",
    "email": "support@topomatic.ru",
    "url": "https://topomatic.ru"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fangarh/RoburIntercept.git"
  },
  "icon": "favicon",
  "apx": false,
  "scripts": {
    "serve": "albatros-cli serve",
    "build": "albatros-cli build"
  },
  "devDependencies": {
    "albatros": "latest",
    "gh-pages": "^6.3.0"
  },
  "albatros": {
    "rules":{
      "intercept":{
        "app":"wdx",
        "description":"Поиск пересечений",
        "title":"Поиск пересечений",
        "cmd": "interceptRuleCmd"
      }
    },
    "properties": {
      "intercept": [
        {
          "cmd": "ru.albatros.wdx/property:filter",
          "label": "Первая конструкция",
          "field": "firstConstruction",
          "description": "Выбор первой конструкции для сравнения"
        },
        {
          "cmd": "ru.albatros.wdx/property:filter",
          "label": "Вторая конструкция",
          "field": "secondConstruction",
          "description": "Выбор второй конструкции для сравнения"
        },
        {
          "cmd": "property:minDepth",
          "label": "Минимальная глубина пересечения",
          "field": "minDepth",
          "description": "Минимальная допустимая глубина пересечения (мм)"
        }
      ]
    },
    "viewsContainers": {
      "bottomPanel": {
        "label": "Пересечения",
        "container": "bottom"
      }
    },
    "views": {
      "intersectionsView": {
        "label": "Результаты",
        "type": "defined",
        "container": "bottomPanel",
        "cmd": "intersections_mount"
      }
    },
    "actions": {
      "intercept": {
        "label": "Пересечение полигонов",
        "cmd": "intercept",
        "description": "Пересечение выбранны полигонов",
        "flags": "128"
      },
      "intersections_mount": {
        "label": "Пересечения",
        "cmd": "intersections_mount"
      }
    },
    "menu": [
      {
        "label": "Пересечение",
        "submenu": [
          {
            "action": "intercept"
          }
        ]
      }
    ]
  },
  "dependencies": {
    "vue": "^3.5.13"
  }
}
